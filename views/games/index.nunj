{% extends 'base/index.nunj' %}


{% block content %}
    <div class="columns">
        <div class="column">
            <h1>Όλα τα παιχνίδια</h1>
            {% for game in games %}
                <div class="box">{{ game.game.datetime.toLocaleDateString() }} {{ game.game.place }} - {{ game.winners }}</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}