                        {#{% if game.game.notes %}<p class="subtitle">{{ game.game.notes }}</p>{% endif %}#}
                    {#</article>#}
                {#</div>#}
                {% if loop.index0 % 2 != 0 %}
                    </div>
                {% endif %}
            {% endfor %}

        </div>
    </div>
{% endblock %}